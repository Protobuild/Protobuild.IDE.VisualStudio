#version 1

if host Windows
  
  set build-process-arch x86
  set build-property DeployExtension false

  generate
  build

  pack . $TARGET_PLATFORM.tar.lzma $TARGET_PLATFORM Build/filter.txt

  if file-exists C:\Users\build\Documents\protobuild_api_key.txt
    push C:\Users\build\Documents\protobuild_api_key.txt $TARGET_PLATFORM.tar.lzma http://protobuild.org/hach-que/Protobuild.IDE.VisualStudio $GIT_COMMIT $TARGET_PLATFORM master --ignore-on-existing
  endif
endif
